{
    "name": "MAM Eurobot 2026 Workspace",
    "remoteUser": "rosdev",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "rosdev",
            "UID": "1000",
            "GID": "1000"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "ms-vscode.cpptools-extension-pack",
                "ranch-hand-robotics.rde-ros-2",
                "smilerobotics.urdf",
                "redhat.vscode-xml",
                "tamasfe.even-better-toml",
                "timonwong.shellcheck",
                "yzhang.markdown-all-in-one"
            ],
            "settings": {
                "files.associations": {
                    "*.rviz": "yaml",
                    "*.srdf": "xml",
                    "*.urdf": "xml",
                    "*.xacro": "xml"
                }
            }
        }
    },
    "workspaceFolder": "/home/rosdev/eurobot_2026_ws",
    "workspaceMount": "source=${localWorkspaceFolder}/mam_eurobot_2026,target=/home/rosdev/eurobot_2026_ws/src/mam_eurobot_2026,type=bind",
    "mounts": [],
    "runArgs": [
        "--net=host"
    ],
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "installTools": true,
            "optimize": true,
            "enableShared": true,
            "installJupyterlab": true,
            "version": "os-provided"
        }
    },
    "postAttachCommand": "sudo rosdep update && sudo rosdep install -y --from-paths src --ignore-src && sudo chown -R $(whoami) /home/rosdev/eurobot_2026_ws/ && colcon build --symlink-install"
}
