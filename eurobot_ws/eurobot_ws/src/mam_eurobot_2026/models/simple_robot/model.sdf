<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="simple_robot" canonical_link="base_link">
    <static>false</static>
    <pose>0 0 0 0 0 0</pose>

    <!-- ====================== BASE LINK ====================== -->
    <!-- Base dimensions: 280mm x 250mm x 70mm -->
    <!-- Base center is at wheel center height (25mm) -->
    <link name="base_link">
      <pose relative_to="__model__">0 0 0.025 0 0 0</pose>
      <inertial>
        <mass>3.0</mass>
        <inertia>
          <ixx>0.0186</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0228</iyy>
          <iyz>0</iyz>
          <izz>0.0391</izz>
        </inertia>
      </inertial>
      <visual name="base_visual">
        <geometry>
          <box><size>0.28 0.25 0.07</size></box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.8 1</ambient>
          <diffuse>0.2 0.2 0.8 1</diffuse>
          <specular>0.4 0.4 0.9 1</specular>
        </material>
      </visual>
      <collision name="base_collision">
        <geometry>
          <box><size>0.28 0.25 0.07</size></box>
        </geometry>
      </collision>
    </link>

    <!-- ====================== BASE FOOTPRINT ====================== -->
    <link name="base_footprint">
      <pose relative_to="base_link">0 0 -0.025 0 0 0</pose>
    </link>
    
    <joint name="base_to_footprint" type="fixed">
      <parent>base_link</parent>
      <child>base_footprint</child>
    </joint>

    <!-- ====================== LEFT WHEEL ====================== -->
    <!-- Wheel: 80mm diameter (40mm radius), 30mm width -->
    <!-- Position: 80mm from rear edge = -0.06m from base center -->
    <!-- Wheelbase: 220mm = 0.11m from center to each side -->
    <!-- Wheels OUTSIDE the base: 250mm/2 = 125mm + 15mm (half wheel width) = 140mm from center -->
    <link name="left_wheel">
      <pose relative_to="base_link">-0.06 0.14 0 -1.5707 0 0</pose>
      <inertial>
        <mass>0.3</mass>
        <inertia>
          <ixx>0.000240</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000240</iyy>
          <iyz>0</iyz>
          <izz>0.000480</izz>
        </inertia>
      </inertial>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e6</kp>
              <kd>100</kd>
            </ode>
          </contact>
        </surface>
      </collision>
    </link>

    <!-- ====================== RIGHT WHEEL ====================== -->
    <link name="right_wheel">
      <pose relative_to="base_link">-0.06 -0.14 0 -1.5707 0 0</pose>
      <inertial>
        <mass>0.3</mass>
        <inertia>
          <ixx>0.000240</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000240</iyy>
          <iyz>0</iyz>
          <izz>0.000480</izz>
        </inertia>
      </inertial>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e6</kp>
              <kd>100</kd>
            </ode>
          </contact>
        </surface>
      </collision>
    </link>

    <!-- ====================== CASTER WHEEL ====================== -->
    <!-- FIXED CALCULATION:
         - Wheel radius: 40mm, center at 25mm height, bottom at -15mm (15mm ground clearance)
         - Caster radius: 20mm (40mm diameter)
         - For level robot: caster bottom must be at -15mm
         - Caster center: -15mm + 20mm = 5mm height
         - Position: 30mm from front edge = 140mm - 30mm = 110mm from center
    -->
    <link name="caster">
      <pose relative_to="base_link">0.11 0 -0.020 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.00008</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.00008</iyy>
          <iyz>0</iyz>
          <izz>0.00008</izz>
        </inertia>
      </inertial>
      <visual name="caster_visual">
        <geometry>
          <sphere><radius>0.020</radius></sphere>
        </geometry>
        <material>
          <ambient>0.3 0.3 0.3 1</ambient>
          <diffuse>0.5 0.5 0.5 1</diffuse>
          <specular>0.8 0.8 0.8 1</specular>
        </material>
      </visual>
      <collision name="caster_collision">
        <geometry>
          <sphere><radius>0.020</radius></sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.01</mu>
              <mu2>0.01</mu2>
              <slip1>1.0</slip1>
              <slip2>1.0</slip2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e6</kp>
              <kd>100</kd>
            </ode>
          </contact>
        </surface>
      </collision>
    </link>

    <!-- ====================== GRIPPER BASE ====================== -->
    <!-- Mounted at front, height adjusted for crate pickup from longest side (150mm) -->
    <link name="gripper_base">
      <pose relative_to="base_link">0.17 0 -0.02 0 0 0</pose>   <!--z=-0.005-->
      <inertial>
        <mass>0.3</mass>
        <inertia>
          <ixx>0.0002</ixx>
          <iyy>0.0002</iyy>
          <izz>0.0002</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <visual name="gripper_base_visual">
        <geometry>
          <box><size>0.08 0.20 0.03</size></box>
        </geometry>
        <material>
          <ambient>0.7 0.7 0.7 1</ambient>
          <diffuse>0.8 0.8 0.8 1</diffuse>
          <specular>0.9 0.9 0.9 1</specular>
        </material>
      </visual>
      <collision name="gripper_base_collision">
        <geometry>
          <box><size>0.08 0.20 0.03</size></box>
        </geometry>
      </collision>
    </link>

    <!-- ====================== LEFT GRIPPER FINGER ====================== -->
    <!-- Grips crate from 150mm (longest) side, positioned to grab 30mm height -->
    <link name="left_finger">
      <pose relative_to="gripper_base">0.04  0.055 0.0 0 0 0</pose> 
      <inertial>
        <mass>0.08</mass>
        <inertia>
          <ixx>0.00008</ixx>
          <iyy>0.00002</iyy>
          <izz>0.00008</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <visual name="left_finger_visual">
        <geometry>
          <box><size>0.16 0.01 0.02</size></box>
        </geometry>
        <material>
          <ambient>0.9 0.3 0.3 1</ambient>
          <diffuse>1.0 0.4 0.4 1</diffuse>
          <specular>1.0 0.6 0.6 1</specular>
        </material>
      </visual>
      <collision name="left_finger_collision">
        <geometry>
          <box><size>0.16 0.01 0.02</size></box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>8.0</mu>
              <mu2>8.0</mu2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e6</kp>
              <kd>100</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
      <sensor name="left_finger_contact" type="contact">
    <always_on>true</always_on>
    <update_rate>200</update_rate>
    <contact>
      <collision>left_finger_collision</collision>
    </contact>
    <topic>/gripper/left/contact</topic>
  </sensor>
    </link>

    <!-- ====================== RIGHT GRIPPER FINGER ====================== -->
    <link name="right_finger">
      <pose relative_to="gripper_base">0.04  -0.055 0.0 0 0 0</pose>  <!--z=0.015-->
      <inertial>
        <mass>0.08</mass>
        <inertia>
          <ixx>0.00008</ixx>
          <iyy>0.00002</iyy>
          <izz>0.00008</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <visual name="right_finger_visual">
        <geometry>
          <box><size>0.16 0.01 0.02</size></box>
        </geometry>
        <material>
          <ambient>0.9 0.3 0.3 1</ambient>
          <diffuse>1.0 0.4 0.4 1</diffuse>
          <specular>1.0 0.6 0.6 1</specular>
        </material>
      </visual>
      <collision name="right_finger_collision">
        <geometry>
          <box><size>0.16 0.01 0.02</size></box> <!--z=0.04-->
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>8.0</mu>
              <mu2>8.0</mu2>
            </ode>
          </friction>
          <contact>
            <ode>
              <kp>1e6</kp>
              <kd>100</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
      <sensor name="right_finger_contact" type="contact">
  <always_on>true</always_on>
  <update_rate>200</update_rate>
  <contact>
    <collision>right_finger_collision</collision>
  </contact>
  <topic>/gripper/right/contact</topic>
</sensor>
    </link>

   
    <!-- ====================== LIDAR LINK ====================== -->
    <!-- Mounted on top of base for 360Â° visibility -->
    <link name="lidar_link">
      <pose relative_to="base_link">0 0 0.050 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.00002</ixx>
          <iyy>0.00002</iyy>
          <izz>0.00002</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <visual name="lidar_visual">
        <geometry>
          <cylinder>
            <radius>0.025</radius>
            <length>0.04</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
      <sensor name="lidar_sensor" type="gpu_lidar">
        <topic>/scan</topic>
        <update_rate>10</update_rate>
        <always_on>true</always_on>
        <visualize>true</visualize>
        <lidar>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
            <vertical>
              <samples>1</samples>
              <resolution>1</resolution>
              <min_angle>0</min_angle>
              <max_angle>0</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.08</min>
            <max>10.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </lidar>
        <frame_id>lidar_link</frame_id>
      </sensor>
    </link>

    <!-- ====================== CAMERA LINK ====================== -->
    <link name="camera_link">
      <pose relative_to="base_link">0.10 0 0.20 0 0.7 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.00001</ixx>
          <iyy>0.00001</iyy>
          <izz>0.00001</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <visual name="camera_visual">
        <geometry>
          <box><size>0.03 0.03 0.03</size></box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.3 0.3 0.3 1</diffuse>
          <specular>0.5 0.5 0.5 1</specular>
        </material>
      </visual>
      <sensor name="camera_sensor" type="camera">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>320</width>
            <height>240</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.007</stddev>
          </noise>
        </camera>
        <topic>/camera</topic>
      </sensor>
    </link>

    <!-- ====================== JOINTS ====================== -->
    
    <!-- Wheel Joints -->
    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- Caster Joint -->
    <joint name="caster_joint" type="fixed">
      <parent>base_link</parent>
      <child>caster</child>
    </joint>

    <!-- Gripper Joints -->
    <joint name="gripper_base_joint" type="fixed">
      <parent>base_link</parent>
      <child>gripper_base</child>
    </joint>

    <joint name="left_finger_joint" type="prismatic">
  <parent>gripper_base</parent>
  <child>left_finger</child>

  <axis>
    <xyz>0 1 0</xyz>

    <limit>
      <!-- Allows finger to move inward and outward -->
      <lower>-0.03</lower>
      <upper>0.03</upper>
      <effort>40</effort>
      <velocity>0.05</velocity>
    </limit>

    <dynamics>
      <damping>3.0</damping>
      <friction>0.5</friction>
    </dynamics>
  </axis>
  </joint>


    <joint name="right_finger_joint" type="prismatic">
  <parent>gripper_base</parent>
  <child>right_finger</child>

  <axis>
    <xyz>0 -1 0</xyz>

    <limit>
      
      <lower>-0.03</lower>
      <upper>0.03</upper>
      <effort>40</effort>
      <velocity>0.05</velocity>
    </limit>

    <dynamics>
      <damping>3.0</damping>
      <friction>0.5</friction>
    </dynamics>
  </axis>
  </joint>



    <!-- Sensor Joints -->
    <joint name="lidar_joint" type="fixed">
      <parent>base_link</parent>
      <child>lidar_link</child>
    </joint>

    <joint name="camera_joint" type="fixed">
      <parent>base_link</parent>
      <child>camera_link</child>
    </joint>

    <!-- ====================== DIFFERENTIAL DRIVE PLUGIN ====================== -->
    <plugin
      filename="libignition-gazebo-diff-drive-system.so"
      name="ignition::gazebo::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.28</wheel_separation>
      <wheel_radius>0.04</wheel_radius>
      <odom_publish_frequency>50</odom_publish_frequency>
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
      <max_linear_acceleration>2.0</max_linear_acceleration>
      <max_angular_acceleration>3.0</max_angular_acceleration>
      <max_linear_velocity>1.0</max_linear_velocity>
      <max_angular_velocity>2.0</max_angular_velocity>
    </plugin>

    <!-- ====================== JOINT STATE PUBLISHER ====================== -->
    <plugin
      filename="libignition-gazebo-joint-state-publisher-system.so"
      name="ignition::gazebo::systems::JointStatePublisher">
      <joint_name>left_wheel_joint</joint_name>
      <joint_name>right_wheel_joint</joint_name>
      <joint_name>left_finger_joint</joint_name>
      <joint_name>right_finger_joint</joint_name>
      <topic>/joint_states</topic>
      <update_rate>50</update_rate>
    </plugin>

  
    <!-- ====================== SENSORS SYSTEM ====================== -->
    <plugin
      filename="libignition-gazebo-sensors-system.so"
      name="ignition::gazebo::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>

    <!-- ====================== POSE PUBLISHER ====================== -->
    <plugin
      filename="libignition-gazebo-pose-publisher-system.so"
      name="ignition::gazebo::systems::PosePublisher">
      <publish_link_pose>true</publish_link_pose>
      <publish_collision_pose>false</publish_collision_pose>
      <publish_visual_pose>false</publish_visual_pose>
      <publish_nested_model_pose>true</publish_nested_model_pose>
      <use_pose_vector_msg>true</use_pose_vector_msg>
      <static_publisher>true</static_publisher>
      <static_update_frequency>10</static_update_frequency>
    </plugin>
    <!-- ====================== Contact Sensor ====================== -->
    <plugin filename="libignition-gazebo-contact-system.so"
        name="ignition::gazebo::systems::Contact">
    </plugin>
    <!-- ====================== ROS2_CONTROL DEFINITION ====================== -->
    <ros2_control name="GripperSystem" type="system">
    <hardware>
    <plugin>ign_ros2_control/IgnitionSystem</plugin>
    </hardware>
  
    <joint name="left_finger_joint">
    <command_interface name="position">
      <param name="min">-0.03</param>
      <param name="max">0.03</param>
    </command_interface>
    <state_interface name="position"/>
    <state_interface name="velocity"/>
    <state_interface name="effort"/>
    </joint>
  
    <joint name="right_finger_joint">
    <command_interface name="position">
      <param name="min">-0.03</param>
      <param name="max">0.03</param>
    </command_interface>
    <state_interface name="position"/>
    <state_interface name="velocity"/>
    <state_interface name="effort"/>
  </joint>
  </ros2_control>

<!-- ====================== IGN_ROS2_CONTROL PLUGIN ====================== -->
<plugin
  filename="libign_ros2_control-system.so"
  name="ign_ros2_control::IgnitionROS2ControlPlugin">
  <parameters>/root/eurobot_ws/src/mam_eurobot_2026/models/simple_robot/gripper_controller.yaml</parameters>
</plugin>
   
  </model>
</sdf>